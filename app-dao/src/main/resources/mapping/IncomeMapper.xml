    <update id="update" parameterType="com.hao.app.pojo.IncomeDO">
        update income
        <set>
            <if test="incomeDay != null">
                income_day = #{incomeDay,jdbcType=DATE},
            </if>
            <if test="projects != null">
                projects = #{projects,jdbcType=INTEGER},
            </if>
            <if test="projectsName != null">
                projects_name = #{projectsName,jdbcType=VARCHAR},
            </if>

            <if test="incomeAmount != null">
                income_amount = #{incomeAmount,jdbcType=DECIMAL},
            </if>
            <if test="contractNumb != null">
                contract_numb = #{incomeAmount,jdbcType=VARCHAR},
            </if>
            <if test="contractAmount != null">
