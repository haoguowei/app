    <select id="count" parameterType="com.hao.app.commons.entity.param.IncomeQueryParam"
            resultType="java.lang.Integer">
        select count(1)
        from income
        <include refid="searchSQL"/>
    </select>

    <select id="search" parameterType="com.hao.app.commons.entity.param.IncomeQueryParam" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from income
        <include refid="searchSQL"/>
        order by id desc
        limit ${pageStart},${pageLimit}
    </select>

    <sql id="searchSQL">
        <where>
            <if test="projectsId != null and projectsId > 0">
                and projects = ${projectsId}
            </if>

            <if test="dateStart != null">
                <![CDATA[ and income_day >= #{dateStart} ]]>
            </if>
            <if test="dateEnd != null">
                <![CDATA[ and income_day <= #{dateEnd} ]]>
            </if>
        </where>
    </sql>


