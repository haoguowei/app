        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="incomeDay != null">
                income_day,
            </if>
            <if test="projects != null">
                projects,
            </if>
            <if test="projectsName != null">
                projects_name,
            </if>

            <if test="incomeAmount != null">
                income_amount,
            </if>
            <if test="contractNumb != null">
                contract_numb,
            </if>
            <if test="contractAmount != null">
                contract_amount,
            </if>
            <if test="jiafang != null">
                jiafang,
            </if>
            <if test="jiafangInfo != null">
                jiafang_info,
            </if>

            <if test="remark != null">
                remark,
            </if>
            <if test="creater != null">
                creater,
            </if>
            <if test="createTime != null">
                create_time,
            </if>
            <if test="updateTime != null">
                update_time,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="incomeDay != null">
                #{incomeDay,jdbcType=DATE},
